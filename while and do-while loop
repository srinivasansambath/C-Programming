// C Program to find sum of n natural nnumbers
#include <stdio.h>

int main()
{
    int n;
    int i = 1, sum = 0;
    scanf("%d",&n);
    while(i<=n)
    {
        sum = sum + i;
        i = i + 1;
    }
    printf("%d",sum);
}
//
#include <stdio.h>

int main()
{
    int n,fact=1;
    printf("Enter the required factorial number");
    scanf("%d",&n);
    while(n>=1)
    {
        fact = fact * n;
       n = n-1; 
    }
    printf("%d",fact);
}
